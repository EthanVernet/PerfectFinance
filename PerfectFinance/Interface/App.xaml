        <!--label-->
        <Style TargetType="Label" x:Key="TitleLabel">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Margin" Value="20"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource BrushBlack}"/>
        </Style>
        
        
        
        <Style x:Key="PasswordBox" TargetType="PasswordBox">
            <Setter Property="Foreground" Value="{StaticResource BrushBlack}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BrushGray2}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="MaxLength" Value="30"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Grid>
                            <TextBlock x:Name="Placeholder" Foreground="{StaticResource BrushGray3}" Margin="10,4" VerticalAlignment="Center" Text="Password"/>
                            <Border CornerRadius="4" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1">
                                <ScrollViewer x:Name="PART_ContentHost" Margin="0"/>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="Placeholder" Property="Visibility" Value="Collapsed"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="{StaticResource BrushBlue1}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <EventSetter Event="Loaded" Handler="PasswordBox_Loaded"/>
            <EventSetter Event="PasswordChanged" Handler="PasswordBox_PasswordChanged"/>
        </Style>

        <Style TargetType="Hyperlink" x:Key="Hyperlink">
            <Setter Property="TextDecorations" Value="None"/>
            <Setter Property="Foreground" Value="{StaticResource BrushBlue1}"/>
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="TextBlock.FontWeight" Value="SemiBold" />
            <Setter Property="NavigateUri" Value="InscriptionPage.xaml" />
            <Setter Property="TextBlock.TextDecorations" Value="None"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="TextBlock.TextDecorations" Value="Underline" />
                </Trigger>
            </Style.Triggers>
        </Style>


        <!--#region Header-->
        <Style x:Key="HeaderLeft" TargetType="Label">
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
